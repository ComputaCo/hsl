{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020", "dom"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "types": ["vscode", "node"]
  },
  "exclude": ["node_modules", ".vscode-test"],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"]
}
